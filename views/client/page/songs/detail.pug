extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .singer-detail
    .container.my-3
      .row
        .col-12
          // ===== Title =====
          .inner-title #{song.title}

          // ===== Actions =====
          .inner-actions
            .inner-action.inner-time
              i.fa-regular.fa-clock
              |  #{song.createdAt}

            .inner-action.inner-singer
              i.fa-solid.fa-microphone-lines
              |  #{singer.fullName}

            .inner-action.inner-topic
              i.fa-solid.fa-music
              |  #{topic.title}

            .inner-action.inner-listen
              i.fa-solid.fa-headphones
              span  #{song.listen} lượt nghe

            .inner-action.inner-like(button-like=song.id)
              i.fa-regular.fa-thumbs-up
              span  #{song.like} thích

            .inner-action.inner-heart(
              class=(song.isFavorite ? "active" : "")
              button-favorite=song.id
            )
              i.fa-regular.fa-heart
              |  Bài hát yêu thích

          // ===== Player =====
          .inner-play
            .inner-avatar
              img(
                src=song.avatar
                alt=song.title
              )

            .inner-audio
              //- Audio mặc định
              //-
              //- audio(controls)
              //-   source(
              //-     src="https://backend.daca.vn/assets/audios/cat-doi-noi-sau.mp3"
              //-     type="audio/mpeg"
              //-   )

              //- APlayer
              #aplayer(
                data-song=`${JSON.stringify(song)}`
                data-singer=`${JSON.stringify(singer)}`
              )

          // ===== Description =====
          .inner-desc
            .inner-label Mô tả
            .inner-text #{song.description}

          // ===== Lyrics =====
          .inner-desc
            .inner-label Lời bài hát
            .inner-text !{song.lyrics}
