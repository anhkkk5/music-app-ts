header.header
  .container
    .row.align-items-center

      // LOGO
      .col-3
        .inner-logo
          a(href="/")
            img(src="/images/logo.svg", alt="Logo")

      // SEARCH + SUGGEST
      .col-5
        .box-search
          form(action="/search/result" method="GET")
            .form-group.d-flex.mb-0
              input.form-control(
                type="text"
                placeholder="Nhập từ khóa..."
                name="keyword"
                value=keyword
              )
              button.btn.btn-primary(type="submit") Tìm

        .inner-suggest
          .inner-list

      // MENU
      .col-4
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li
              a(href="/topics") Chủ đề
            li
              a(href="/favorite-songs")
                i.fa-regular.fa-heart
                |  Yêu thích
