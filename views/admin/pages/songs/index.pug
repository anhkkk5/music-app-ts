extends ../../layouts/defaut.pug

block main
  h1.mb-4 #{pageTitle}

  .card.mb-3
    .card-header Danh sách
    .card-body
      .row
        .col-8

        .col-4.text-right
          a.btn.btn-outline-success(
            href=`/${prefixAdmin}/songs/create`
          ) + Thêm mới

      table.table.table-hover.table-sm
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Trạng thái
            th Hành động

        tbody
          each item, index in songs
            tr
              td #{index + 1}

              td
                img(
                  src=item.avatar
                  alt=item.title
                  width="100"
                )

              td #{item.title}

              td
                if item.status === 'active'
                  span.badge.badge-success Hoạt động
                else
                  span.badge.badge-danger Dừng hoạt động

              td
                a.btn.btn-warning.btn-sm(
                  href=`/${prefixAdmin}/songs/edit/${item.id}`
                ) Sửa
                a.btn.btn-danger.btn-sm(
                  href=`/${prefixAdmin}/songs/delete/${item.id}`
                ) Xoá
                a.btn.btn-secondary.btn-sm(
                  href=`/${prefixAdmin}/songs/detail/${item.id}`
                ) Chi tiết